<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text"
                android:text="Thông tin sản phẩm"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textColor="#4CAF50"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/show_product"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text"
                android:src="@drawable/home"
                android:layout_marginTop="20dp"
                android:layout_width="70pt"
                android:layout_height="70pt"/>

            <Button
                android:id="@+id/change_image"
                android:text="Đổi ảnh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_below="@id/text"
                android:layout_marginTop="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_below="@id/show_product"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/change_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="87dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:text="đổi tên" />
            <TextView
                android:id="@+id/price"
                android:layout_below="@id/change_name"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/change_price"
                android:text="đổi giá"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/price"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/info"
                android:layout_below="@id/change_price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/change_info"
                android:text="đổi mô tả"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/save_change"
                android:text="Lưu thay đổi"
                android:textColor="#4CAF50"
                android:layout_marginTop="30dp"
                android:layout_below="@id/change_info"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/delete"
                android:text="Xóa Sản Phẩm"
                android:textColor="#FF0057"
                android:layout_marginTop="30dp"
                android:layout_below="@id/save_change"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>