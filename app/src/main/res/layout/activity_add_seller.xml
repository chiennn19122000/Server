<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dang_ky_seller"
        android:text="Đăng ký tài khoản seller"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="#FF5722"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/userregis"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/dang_ky_seller"
        android:hint="Tài khoản đăng kí"
        android:textColorHint="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/passregis"
        android:layout_marginTop="25dp"
        android:layout_below="@id/userregis"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="Mật khẩu đăng kí"
        android:textColorHint="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/name"
        android:layout_below="@id/passregis"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="Họ tên seller"
        android:textColorHint="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/sdt"
        android:layout_below="@id/name"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="Số điện thoại liên lạc"
        android:inputType="number"
        android:textColorHint="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/email"
        android:layout_below="@id/sdt"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="email seller"
        android:textColorHint="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/place_seller"
        android:layout_below="@id/email"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:hint="place seller"
        android:textColorHint="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/registrationuser"
        android:text="Đăng kí"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>